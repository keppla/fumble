{
  "compileOnSave": false,

  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
        "es6", "dom"
    ],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": false,
    "jsx": "React",

    "module": "esnext",
    "moduleResolution": "node"
  }
}
